@model Funcionario

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<tds texto="@TempData["msg"]"></tds>


<form asp-action="Cadastrar" asp-controller="Funcionario">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Salario"></label>
        <input asp-for="Salario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cargo"></label>
        <select asp-for="Cargo" asp-items="@Html.GetEnumSelectList<Cargo>()">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Setor"></label>
        <select asp-for="Setor" class="form-control" asp-items="@ViewBag.setores">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <input asp-for="Ativo" />
        <label asp-for="Ativo"></label>
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-outline-primary" />
    <a asp-action="index" class="btn btn-outline-dark">Funcionários</a>
</form>

