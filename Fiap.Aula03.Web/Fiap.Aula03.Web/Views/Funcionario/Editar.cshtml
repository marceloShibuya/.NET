@model Funcionario

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<form asp-action="editar">

    <input asp-for="Codigo" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Salario"></label>
        <input asp-for="Salario" class="form-control" />
    </div>
    <div class="form-group">
        <select asp-for="Cargo" class="form-control" asp-items="@Html.GetEnumSelectList<Cargo>()">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Setor"></label>
        <select asp-for="Setor" class="form-control" asp-items="@ViewBag.setores">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <input asp-for="Ativo" />
        <label asp-for="Ativo"></label>
    </div>
    <input type="submit" value="Editar" class="btn btn-outline-primary" />
    <a asp-action="index" class="btn btn-outline-dark">Cancelar</a>
</form>