@model Vaga 

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<form asp-action="Cadastrar" asp-controller="Vaga">

    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Remoto" />
        <label asp-for="Remoto"></label>
    </div>
    <div class="form-group">
        <label asp-for="Regime"></label>
        <select asp-for="Regime" asp-items="@Html.GetEnumSelectList<Regime>()">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Empresa"></label>
        <select asp-for="Empresa" class="form-control" asp-items="@ViewBag.empresas">
            <option>Selecione</option>
        </select>
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-outline-primary" />
    <a asp-action="Index" class="btn btn-outline-dark">Vagas</a>

</form>

